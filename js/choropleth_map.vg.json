{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Trade of Beauty Products 2020",
    "width": 800,
    "height": 400,
    "background": "#fdf1f4",
    "params": [
        {
            "name": "Type_selection",
            "bind": {
                "input": "select",
                "options": [
                    "Balance2020",
                    "Exported2020",
                    "Imported2020"
                ],
                "labels": [
                    "Trade Balance",
                    "Exports",
                    "Imports"
                ],
                "name": "Data Selection: "
            }
        }
    ],
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/kkl2610/Data-Visualisation/master/js/world.topo.json",
                "format": {
                    "type": "topojson",
                    "feature": "world.geo"
                }
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.name_long",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/kkl2610/Data-Visualisation/master/data/Trade_long.csv"
            },
            
            "transform": [
                {
                    "lookup": "Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/kkl2610/Data-Visualisation/master/js/world.topo.json",
                            "format": {
                                "type": "topojson",
                                "feature": "world.geo"
                            }
                        },
                        "key": "properties.name_long"
                    },
                    "as": "geo"
                },
                {
                    "filter": "datum.Type == 'Balance2020' || datum.Type == Type_selection"
                }
                
            ],
            
            "mark": {
                "type": "geoshape",
                "stroke": "#fff",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "Amount",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            -1000000000,
                            -500000000,
                            0,
                            500000000,
                            1000000000
                        ],
                        "range": [
                            "#b2182b",
                            "#ef8a62",
                            "#fddbc7",
                            "#d1e5f0",
                            "#67a9cf",
                            "#2166ac"
                        ]
                        
                    },
                    "legend": {
                        "format": "$,", "title": "Amount (USD)" 
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Amount",
                        "type": "quantitative",
                        "title": "Amount (USD)",
                        "format": "$,"
                    }
                    
                ]
            }
        }
    ],
    "config": {
        "view": {
        "stroke": null
      },
      "axis": {
        "labelFont": "Epilogue",
        "titleFont": "Epilogue"
      },
      "legend": {
        "labelFont": "Epilogue",
        "titleFont": "Epilogue"
      },
      "header": {
        "labelFont": "Epilogue",
        "titleFont": "Epilogue"
      },
      "title": {
        "font": "Epilogue",
        "fontSize": 16,
        "fontWeight": 600,
        "dx":0
      }}
}
