{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Trade Balance (2017-2020)",
    "repeat": ["Balance2017", "Balance2018", "Balance2019", "Balance2020"],
    "columns": 2,
    "spec": {
        "projection": {
            "type": "equalEarth"
        },
        "width": 400,
        "height": 300,
        "layer": [{
                "data": {
                    "url": "https://raw.githubusercontent.com/kkl2610/Data-Visualisation/master/js/world.topo.json",
                    "format": { "type": "topojson", "feature": "world.geo" }
                },
                "transform": [{
                    "calculate": "'Data is not available in ' + datum.properties.name_long",
                    "as": "note"
                }],
                "mark": {
                    "type": "geoshape",
                    "fill": "#ddd",
                    "stroke": "white",
                    "strokeWidth": 1
                },
                "encoding": { "tooltip": { "field": "note" } }
            },
            {
                "data": {
                    "url": "https://raw.githubusercontent.com/kkl2610/Data-Visualisation/master/data/Trade_Balance.csv"
                },
                "transform": [{
                    "lookup": "Countries",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/kkl2610/Data-Visualisation/master/js/world.topo.json",
                            "format": {
                                "type": "topojson",
                                "feature": "world.geo"
                            }
                        },
                        "key": "properties.name_long"
                    },
                    "as": "geo"
                }],
                "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
                "encoding": {
                    "shape": { "field": "geo", "type": "geojson" },
                    "color": {
                        "field": { "repeat": "repeat" },
                        "type": "quantitative",
                        "scale": {
                            "type": "threshold",
                            "domain": [
                                -1000000000,
                                -500000000,
                                0,
                                500000000,
                                1000000000
                            ],
                            "range": [
                                "#b2182b",
                                "#ef8a62",
                                "#fddbc7",
                                "#d1e5f0",
                                "#67a9cf",
                                "#2166ac"
                            ]
                        },
                        "legend": { "format": ".1s", "title": "Amount (USD)" }
                    },
                    "tooltip": [
                        { "field": "Countries", "type": "nominal", "title": "Country" },
                        {
                            "field": { "repeat": "repeat" },
                            "type": "quantitative",
                            "title": "Amount (USD)",
                            "format": ","
                        }
                    ]
                }
            },
            {
                "data": {
                    "values": [{
                        "Balance2017": "Year: 2017",
                        "Balance2018": "Year: 2018",
                        "Balance2019": "Year: 2019",
                        "Balance2020": "Year: 2020"
                    }]
                },
                "mark": {
                    "type": "text",
                    "align": "right",
                    "baseline": "bottom",
                    "x": "width",
                    "y": 0
                },
                "encoding": {
                    "text": { "field": { "repeat": "repeat" } }
                }

            }
        ]
    },
    "config": {}
}
