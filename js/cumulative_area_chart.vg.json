{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Exports",
  "background": "#fcf5f7",
  "data": {"url": "https://raw.githubusercontent.com/kkl2610/Data-Visualisation/master/data/Exports.csv"},
  "vconcat":[{
    "width": 420,
    "height": 250,
    "mark": "area",
    "params": [{
      "name": "click",
      "select": {
        "type": "point",
        "fields": ["Continent"]
      },
      "bind": "legend"
    }],
    "encoding": {
      "x": {
        "timeUnit": "year", "field": "Year",
        "axis": {"format": "%Y", "title": null, "tickCount": "year"},
        "scale": {"domain":{"param": "brush"}}
      },
      "y": {
        "aggregate": "sum", "field": "Trade Value", "sort":"ascending", "axis": {"title": "Trade Value (USD)", "format": ","}
      },
      "color": {
        "condition": {
          "param": "click",
          "field":"Continent",
          "type":"nominal",
          "scale": { "domain": [ "Africa", "Asia", "Europe", "Oceania", "South America", "North America" ], "range": ["#BDD9BF", "#929084", "#A997DF",  "#E5323B", "#FFC857", "#2E4052"] },
          "title": null
        },
        "value": "grey"
      },
      "opacity": {
        "condition": {
          "param": "click",
          "value": 1
        },
        "value": 0.1
      },
      "order":{"aggregate":"sum", "field":"Trade Value", "sort": "descending"},
      "tooltip": [
        {"field": "Continent", "type": "nominal"},
        {"aggregate": "sum", "field": "Trade Value", "type": "quantitative", "title": "Trade Value (USD)", "format": ","},
        {"field": "Year", "type": "temporal", "format": "%Y"}
      ]
    }
  },{
    "width": 425,
    "height": 70,
    "mark": "area",
    "params": [{
      "name": "brush",
      "select": {"type": "interval", "encodings": ["x"]}
    }],
    "encoding": {
      "x": {
        "timeUnit": "year", "field": "Year",
        "axis": {"format": "%Y", "title": null, "tickCount": "year"}
      },
      "y": {
        "aggregate": "sum", "field": "Trade Value", "sort":"ascending", "axis": {"title": "Trade Value", "format": ","}
      },
      "color": {
        "field": "Continent",
        "type": "nominal",
        "scale": { "domain": [ "North America", "South America", "Europe", "Oceania", "Asia", "Africa" ], "range": ["#BDD9BF", "#929084", "#A997DF",  "#E5323B", "#FFC857", "#2E4052"] }
      },
      "order":{"aggregate":"sum", "field":"Trade Value", "sort": "descending"}
    }
  }],
  
  "config": {
    "view": {
      "stroke": null
    },
    "axis": {
      "labelFont": "Epilogue",
      "titleFont": "Epilogue"
    },
    "legend": {
      "labelFont": "Epilogue",
      "titleFont": "Epilogue",
      "orient": "top",
      "direction": "horizontal",
      "padding": 8,
      "offset": 8
    },
    "header": {
      "labelFont": "Epilogue",
      "titleFont": "Epilogue"
    },
    "title": {
      "font": "Epilogue",
      "fontSize": 16,
      "fontWeight": 600,
      "align": "center",
      "dx":170
    }
  }
}